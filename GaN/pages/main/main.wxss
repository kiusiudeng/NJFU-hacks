/* pages/main.wxss */
page {
  background-color: aliceblue;
}

.user {
  position: relative;
  width: auto;
  height: 300rpx;
  display: flex;
}

.user-avatar {
  overflow: hidden;
  /* display: block; */
  width: 200rpx;
  height: 200rpx;
  margin: 50rpx;
  margin-top: 50rpx;
  border-radius: 5%;
  box-shadow: 0px 0px 5px 1px rgba(0, 0, 0, 0.2);
}

.user-text {
  margin: 40rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.divLine {
  background: #E0E3DA;
  width: 100%;
  height: 5rpx;
}

.detail{
  position: relative;
  display: flex;
  /* flex-wrap: wrap; */
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.action {
  margin: 50rpx;
  margin-top: 50rpx;
  display: flex;
  flex-wrap: wrap;
  width: auto;
  height: auto;
}

#btn {
  margin-bottom: 25rpx;
  height: 250rpx;
  width: 250rpx;
  font-size: 30rpx;
  display: flex;
}

button{
  justify-content: center;
  align-items: flex-end;
}

